<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout       android:id="@+id/lyHRNotSupported"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView      android:id="@+id/imgHRNotSupported"
            android:layout_marginEnd="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_bluetooth_unsupported" />

        <TextView       android:id="@+id/lblHRNotSupported"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="@string/lblHRNotSupported"/>
    </LinearLayout>

    <LinearLayout       android:id="@+id/lyRRNotSupported"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView      android:id="@+id/imgRRNotSupported"
            android:layout_marginEnd="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_bluetooth_unsupported" />

        <TextView       android:id="@+id/lblRRNotSupported"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="@string/lblRRNotSupported"/>
    </LinearLayout>

</LinearLayout>
